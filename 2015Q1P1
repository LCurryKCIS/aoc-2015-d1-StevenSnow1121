import java.util.*;

class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        String in =  s.nextLine();
        int floor = 0;
        for(int i = 0; i < in.length();i++){
            if(in.substring(i,i+1).equals("(")){
                floor++;
            } else {
                floor--;
            }
        }
        System.out.println(floor);
    }

}
